{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "outDir": ".",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "files": ["src/index.ts"],
  "include": [
    "test"
  ]
}
