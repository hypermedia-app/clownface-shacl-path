{
  "env": {
    "esm": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": false,
            "targets": {
              "esmodules": true
            }
          }
        ],
        "@babel/preset-typescript"
      ],
      "plugins": [
        ["babel-plugin-add-import-extension"]
      ]
    },
    "cjs": {
      "plugins": [
        ["babel-plugin-add-import-extension", { "extension": "cjs" }]
      ]
    }
  },
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ]
}
